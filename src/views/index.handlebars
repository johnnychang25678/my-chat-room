<div class="container">
    {{#if error}}
    <p class="error-message">{{error}}</p>
    {{/if}}
    <h1>FSE Chat Room</h1>
    <div class="spacer-v-24"></div>
    <form class="form-container" action="/user/login" method="post">
        <div class="form-group-vertical">
            <label class="input-label">Username</label>
            <input type="text" name="username" required autofocus>
        </div>
        <div class="spacer-v-8"></div>
        <div class="form-group-vertical">
            <label class="input-label">Password</label>
            <input type="password" name="password" required>
        </div>
        <div class="spacer-v-8"></div>
        <div class="form-group-horizontal">
            <button class="form-btn" type="submit">Login</button>
            <div class="spacer-h-8"></div>
            <button class="form-btn" type="submit" formaction="/user/register">Register</button>
        </div>
    </form>
</div>